<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.tibomenga.artigospub.CriarSenhaActivity">


    <com.goodiebag.pinview.Pinview
        android:id="@+id/pinView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cursorVisible="false"
        app:forceKeyboard="true"
        app:hint="0"
        app:inputType="number"
        app:password="false"
        app:pinHeight="40dp"
        app:pinLength="4"
        app:pinWidth="40dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/editTextCriar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.goodiebag.pinview.Pinview
        android:id="@+id/pinView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cursorVisible="false"
        app:forceKeyboard="true"
        app:hint="0"
        app:inputType="number"
        app:password="false"
        app:pinHeight="40dp"
        app:pinLength="4"
        app:pinWidth="40dp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/pinView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/editTextCriar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:gravity="center"
        android:inputType="none"
        android:text="Criar uma nova Senha" />

    <TextView
        android:id="@+id/editTextDigiteNovamente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pinView1"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="none"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:gravity="center"
        android:text="Digite novamente" />

    <Button
        android:id="@+id/btnConfirmarSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        android:text="CONFIRMAR"
        android:layout_below="@+id/pinView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextNomeRecuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pinView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewNomeRecup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pinView2"
        android:layout_marginTop="15dp"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:gravity="center"
        android:text="Digite um nome para recuperar a senha" />
</RelativeLayout>
